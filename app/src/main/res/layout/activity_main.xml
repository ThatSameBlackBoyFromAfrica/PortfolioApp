<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        tools:context=".MainActivity">
    <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/constraintLayout">



    <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="vertical"
            android:background="@drawable/topdesign">
    </LinearLayout>

    <RelativeLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="560dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="vertical"
            android:background="#333333">

        <TextView
                android:id="@+id/textView"
                android:text="Chukwuebuka Muofunanya"
                android:layout_marginTop="100dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:clickable="false"
                android:fontFamily="@font/anton"
                android:textSize="22sp"
                android:textStyle="normal|bold"
                android:textColor="#D5FFFFFF"
                android:layout_marginStart="-2dp"
                android:layout_marginEnd="2dp"/>
        <TextView
                android:id="@+id/textView2"
                android:text="Mobile Developer"
                android:textColor="#BBBABA"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light"
                android:gravity="center_horizontal"
                android:textSize="18sp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/textView"/>
        <TextView
                android:id="@+id/textView3"
                android:text="I'm warmed of mobile  technologies.\nIdeas maker, curious and nature lover."
                android:textColor="#BBBABA"
                android:gravity="center_horizontal"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="20dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/textView2"/>
        <RelativeLayout
                android:id="@+id/relLayout3"
                android:layout_width="match_parent"
                android:layout_height="310dp"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:background="@drawable/roundborder"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/textView3">


            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/androidimage"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:onClick="onClick"
                    android:clickable="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/android"/>

            <TextView
                    android:id="@+id/tvandoid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Android"
                    android:layout_alignStart="@id/androidimage"
                    android:textColor="@android:color/white"
                    android:layout_below="@id/androidimage"/>

            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/bitbucket"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:onClick="onClick"
                    android:clickable="true"
                    android:layout_toEndOf="@id/androidimage"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/bitbucket"/>
            <TextView
                    android:id="@+id/tvbitbucket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bitbucket"
                    android:layout_alignStart="@id/bitbucket"
                    android:textColor="@android:color/white"
                    android:layout_below="@id/androidimage"/>

            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/dribble"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:onClick="onClick"
                    android:clickable="true"
                    android:layout_toEndOf="@id/bitbucket"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/dribble"/>
            <TextView
                    android:id="@+id/tvdribble"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dribble"
                    android:layout_alignStart="@id/dribble"
                    android:textColor="@android:color/white"
                    android:layout_below="@id/androidimage"/>

            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/email"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:onClick="onClick"
                    android:clickable="true"
                    android:layout_toEndOf="@id/dribble"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/email"/>
            <TextView
                    android:id="@+id/tvemail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="E-mail"
                    android:layout_alignStart="@id/email"
                    android:textColor="@android:color/white"
                    android:layout_below="@id/androidimage"/>

            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/facebook"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:onClick="onClick"
                    android:clickable="true"
                    android:layout_alignStart="@id/androidimage"
                    android:layout_below="@id/tvandoid"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/facebook"/>
            <TextView
                    android:id="@+id/tvfacebook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Facebook"
                    android:layout_alignStart="@id/facebook"
                    android:layout_below="@id/facebook"
                    android:textColor="@android:color/white"/>

            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/github"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:onClick="onClick"
                    android:clickable="true"
                    android:layout_toEndOf="@id/facebook"
                    android:layout_below="@id/tvandoid"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/github"/>
            <TextView
                    android:id="@+id/tvgithub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Github"
                    android:layout_alignStart="@id/github"
                    android:layout_below="@id/facebook"
                    android:textColor="@android:color/white"/>

            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/twitter"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:onClick="onClick"
                    android:clickable="true"
                    android:layout_toEndOf="@id/github"
                    android:layout_below="@id/tvandoid"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/twitter"/>
            <TextView
                    android:id="@+id/tvtwitter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Twitter"
                    android:layout_alignStart="@id/twitter"
                    android:layout_below="@id/facebook"
                    android:textColor="@android:color/white"/>

            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/google"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:onClick="onClick"
                    android:clickable="true"
                    android:layout_toEndOf="@id/twitter"
                    android:layout_below="@id/tvandoid"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/google"/>
            <TextView
                    android:id="@+id/tvgoogle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Google"
                    android:layout_alignStart="@id/google"
                    android:layout_below="@id/facebook"
                    android:textColor="@android:color/white"/>

            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/instagram"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:onClick="onClick"
                    android:clickable="true"
                    android:layout_alignStart="@id/androidimage"
                    android:layout_below="@id/tvfacebook"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/instagram"/>
            <TextView
                    android:id="@+id/tvinstagram"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Instagram"
                    android:layout_alignStart="@id/facebook"
                    android:layout_below="@id/instagram"
                    android:textColor="@android:color/white"/>

            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/linkedin"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:onClick="onClick"
                    android:clickable="true"
                    android:layout_toEndOf="@id/instagram"
                    android:layout_below="@id/tvgithub"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/linkedin"/>
            <TextView
                    android:id="@+id/tvlinkedin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Linkedin"
                    android:layout_alignStart="@id/linkedin"
                    android:layout_below="@id/instagram"
                    android:textColor="@android:color/white"/>

            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/playstore"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:onClick="onClick"
                    android:clickable="true"
                    android:layout_toEndOf="@id/linkedin"
                    android:layout_below="@id/tvgithub"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/playstore"/>
            <TextView
                    android:id="@+id/tvplaystore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Playstore"
                    android:layout_alignStart="@id/playstore"
                    android:layout_below="@id/instagram"
                    android:textColor="@android:color/white"/>

            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/skype"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:onClick="onClick"
                    android:clickable="true"
                    android:layout_toEndOf="@id/playstore"
                    android:layout_below="@id/tvgithub"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/skype"/>
            <TextView
                    android:id="@+id/tvskype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="skype"
                    android:layout_alignStart="@id/skype"
                    android:layout_below="@id/instagram"
                    android:textColor="@android:color/white"/>





        </RelativeLayout>

    </RelativeLayout>


    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profilepic"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/profile"
            app:civ_border_color="@android:color/white"
            app:civ_border_width="8dp"
            android:onClick="onClick"
            android:clickable="true"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/linearLayout"
            android:layout_marginBottom="480dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.482" android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="@+id/linearLayout" android:layout_centerHorizontal="true"
            app:layout_constraintVertical_bias="1.0" android:layout_alignParentTop="true"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>